                                </div>
                                <!-- Goal Weight Field -->
                                <div class="form-group">
                                    <label for="user-goal-weight">Goal Weight:</label>
                                    <input class="form-control" type="number" id="user-goal-weight" name="goal_weight"
                                        value="{{goal_weight}}" />
                                </div>
                                <!-- Activity Level Field -->
                                <div class="form-group">
                                    <label for="user-activity-level">Activity Level:</label>
                                    <select class="form-control" id="user-activity-level" name="activity_level">
                                        <option value="low">Low</option>
                                        <option value="moderate">Moderate</option>
                                        <option value="high">High</option>
                                    </select>
                                </div>
                                <!-- Fitness Goal Field -->
                                <div class="form-group">
                                    <label for="user-fitness-goal">Fitness Goal:</label>
                                    <input class="form-control" type="text" id="user-fitness-goal" name="fitness_goal"
                                        value="{{fitness_goal}}" />
                                </div>
                                <!-- Dietary Preference Field -->
                                <div class="form-group">
                                    <label for="user-dietary-preference">Dietary Preference:</label>
                                    <input class="form-control" type="text" id="user-dietary-preference"
                                        name="dietary_preference" value="{{dietary_preference}}" />
                                </div>
                                <!-- Resting Heart Rate Field -->
                                <div class="form-group">
                                    <label for="user-resting-heart-rate">Resting Heart Rate:</label>
                                    <input class="form-control" type="number" id="user-resting-heart-rate"
                                        name="resting_heart_rate" value="{{resting_heart_rate}}" />
                                </div>
                                <!-- Blood Pressure Field -->
                                <div class="form-group">
                                    <label for="user-blood-pressure">Blood Pressure:</label>
                                    <input class="form-control" type="text" id="user-blood-pressure"
