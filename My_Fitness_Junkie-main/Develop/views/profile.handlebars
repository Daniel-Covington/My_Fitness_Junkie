    </div>

    <div class="card mt-4">
        <h5 class="card-header bg-primary text-white">Create a New Workout</h5>
        <div class="card-body">
            <form class="new-workout-form">
                <div class="form-group">
                    <label for="workout-type">Workout Type:</label>
                    <select class="form-control" id="workout-type" name="type">
                        <option value="Strength">Strength</option>
                        <option value="Cardio">Cardio</option>
                        <option value="Yoga">Yoga</option>
                        <option value="Active Rest">Active Rest</option>
                        <option value="High Intensity">High Intensity</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="workout-description">Description:</label>
                    <input class="form-control" type="text" id="workout-description" name="description" />
                </div>
                <div class="form-group">
                    <label for="workout-duration">Duration (minutes):</label>
                    <input class="form-control" type="number" id="workout-duration" name="duration" />
                </div>
                <div class="form-group">
                    <label for="workout-distance">Distance:</label>
                    <input class="form-control" type="number" id="workout-distance" name="distance" />
                </div>
                <div class="form-group">
                    <label for="workout-sets">Sets:</label>
                    <input class="form-control" type="number" id="workout-sets" name="sets" />
                </div>
                <div class="form-group">
                    <label for="workout-reps">Reps:</label>
                    <input class="form-control" type="number" id="workout-reps" name="reps" />
                </div>
                <div class="form-group">
                    <label for="workout-weight">Weight:</label>
                    <input class="form-control" type="number" id="workout-weight" name="weight" />
                </div>
                <div class="form-group">
                    <label for="workout-intensity">Intensity:</label>
                    <select class="form-control" id="workout-intensity" name="intensity" />
                    <option value="low">Low</option>
                    <option value="moderate">Moderate</option>
                    <option value="high">High</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="workout-heart-rate">Heart Rate:</label>
                    <input class="form-control" type="number" id="workout-heart-rate" name="heart_rate" />
                </div>
                <div class="form-group">
                    <label for="workout-calories">Calories Burned:</label>
                    <input class="form-control" type="number" id="workout-calories" name="caloriesBurned" />
                </div>
                <div class="form-group">
                    <label for="workout-rating">Rating:</label>
                    <input class="form-control" type="number" id="workout-rating" name="rating" />
                </div>
                <div class="form-group">
                    <label for="workout-notes">Notes:</label>
                    <textarea class="form-control" id="workout-notes" name="notes"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>


