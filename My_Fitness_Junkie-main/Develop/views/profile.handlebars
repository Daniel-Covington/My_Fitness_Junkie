<link rel="stylesheet" href="/css/style.css">

<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome, {{name}}!</h1>
        <hr class="my-4">
    </div>

{{!-- This is where the data charts will be displayed --}}
<canvas id="myChart" style="width:100%;max-width:700px"></canvas>


{{!-- This will load the top 6 popular workouts --}}
<div class="container center-align" id="popular-trailers">
      <h2 class="white-text texttrailer">Don't know to start? Check out these workouts!</h2>
      <div id="workouts-container"></div>
    </div>


{{!-- This will load the user details --}}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header bg-primary text-white" data-bs-toggle="collapse" data-bs-target="#user-details" style="cursor: pointer;">Your Details</h5>
                <div id="user-details" class="collapse show">
                    <div class="card-body">
                        <p>user_id: {{user_id}}</p>
                        <p>Current Weight: {{weight}}</p>
                        <p>Height: {{height}}</p>
                        <p>bmi: {{bmi}}</p>
                        <p>Goal Weight: {{goal_weight}}</p>
                        <p>activity_level: {{activity_level}}</p>
                        <p>dietary_preference: {{dietary_preference}}</p>
                        <p>resting_heart_rate: {{resting_heart_rate}}</p>
                        <p>updatedAt: {{updatedAt}}</p>
                    </div>
                                    <div class="card-footer">
                    <!-- Button to Open the Update Details Modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateDetailsModal">
                        Update Details
                    </button>
                </div>
            </div>
                </div>


