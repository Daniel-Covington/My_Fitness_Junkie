<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Workout:</h3>

    <form class="form new-workout-form">
      <div class="form-group">
        <label for="workout-type">Workout Type:</label>
        <input class="form-input" type="text" id="workout-type" name="workout-type" />
      </div>
      <div class="form-group">
        <label for="workout-duration">Workout Duration (Minutes):</label>
        <input class="form-input" type="number" id="workout-duration" name="workout-duration" />
      </div>
      <div class="form-group">
        <label for="workout-intensity">Workout Intensity:</label>
        <input class="form-input" type="text" id="workout-intensity" name="workout-intensity" />
      </div>
      <div class="form-group">
        <label for="workout-calories">Calories Burned:</label>
        <input class="form-input" type="number" id="workout-calories" name="workout-calories" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if workouts.length}}
  <div class="col-md-6 workout-list">
    <h3>Current Workouts:</h3>

    {{#each workouts as |workout|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/workout/{{workout.id}}">{{workout.type}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{workout.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
