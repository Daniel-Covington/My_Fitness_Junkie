<link rel="stylesheet" href="/css/style.css">

<div class="row justify-content-end">
  <div class="col-md-6">
    <h2 class='text-danger'>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="text-danger">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="text-danger">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 class="text-danger">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="text-danger">Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="text-danger">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="text-danger">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
